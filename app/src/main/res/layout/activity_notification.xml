<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:background="@drawable/cardcolor"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <!-- Notification 1 -->
    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="8dp"
        android:layout_marginTop="15dp"
        android:foreground="?android:attr/selectableItemBackground"
        android:background="#FFFFFF"
        android:elevation="4dp"
        android:radius="8dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="16dp">

            <TextView
                android:id="@+id/notification1_title"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Trekking Event: Mount Everest Expedition"
                android:textSize="18sp"
                android:textColor="@color/white"
                android:textStyle="bold"/>

            <TextView
                android:id="@+id/notification1_message"
                android:layout_width="match_parent"
                android:textColor="@color/white"
                android:layout_height="wrap_content"
                android:text="Join us for the ultimate adventure! Embark on a journey to conquer Mount Everest. Limited slots available. Register now!"

                android:layout_marginTop="8dp"/>

        </LinearLayout>
    </androidx.cardview.widget.CardView>

    <!-- Notification 2 -->
    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="8dp"
        android:layout_marginTop="15dp"
        android:foreground="?android:attr/selectableItemBackground"
        android:background="#FFFFFF"
        android:elevation="4dp"
        android:radius="8dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="16dp">

            <TextView
                android:id="@+id/notification2_title"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textColor="@color/white"
                android:text="Trekking Workshop: Essential Gear Guide"
                android:textSize="18sp"
                android:textStyle="bold"/>

            <TextView
                android:id="@+id/notification2_message"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textColor="@color/white"
                android:text="Learn about the must-have gear for your next trekking adventure. Join our workshop on gear essentials for trekking beginners."

                android:layout_marginTop="8dp"/>

        </LinearLayout>
    </androidx.cardview.widget.CardView>

    <!-- Notification 3 -->
    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="8dp"
        android:layout_marginTop="15dp"
        android:foreground="?android:attr/selectableItemBackground"
        android:background="#FFFFFF"
        android:elevation="4dp"
        android:radius="8dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="16dp">

            <TextView
                android:id="@+id/notification3_title"
                android:layout_width="match_parent"
                android:textColor="@color/white"
                android:layout_height="wrap_content"
                android:text="Trekking Trail Closure Notice"
                android:textSize="18sp"
                android:textStyle="bold"/>

            <TextView
                android:id="@+id/notification3_message"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textColor="@color/white"
                android:text="Please note that the XYZ trekking trail will be closed for maintenance from 2024-07-10 to 2024-07-15. Plan your trekking trips accordingly."
                android:layout_marginTop="8dp"/>

        </LinearLayout>
    </androidx.cardview.widget.CardView>

    <!-- Notification 4 -->
    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="8dp"
        android:layout_marginTop="15dp"
        android:foreground="?android:attr/selectableItemBackground"
        android:background="#FFFFFF"
        android:elevation="4dp"
        android:radius="8dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="16dp">

            <TextView
                android:id="@+id/notification4_title"
                android:layout_width="match_parent"
                android:textColor="@color/white"
                android:layout_height="wrap_content"
                android:text="Summer Trekking Camp for Kids"
                android:textSize="18sp"
                android:textStyle="bold"/>

            <TextView
                android:id="@+id/notification4_message"
                android:layout_width="match_parent"
                android:textColor="@color/white"
                android:layout_height="wrap_content"
                android:text="Enroll your kids in our summer trekking camp! Let them explore nature, learn survival skills, and make new friends in the great outdoors."

                android:layout_marginTop="8dp"/>

        </LinearLayout>
    </androidx.cardview.widget.CardView>

</LinearLayout>
